doctype html

head
	style.
		body, html{
			height	:	100%;
		}
		iframe{
			display	:	block;
			border	:	0px;
		}
		p{
			position	:	absolute;
			top			:	20px;
			left		:	20px;
		}
		.container{
			width		:	100%;
			height		:	50%;
			display		:	block;
			position	:	relative;
		}
		#instructions{
			//-left		:	0px;
			right		:	20px;
			position	:	absolute;
			top			:	4<D-r>0px;
		}

		#instructions, p{
			font-color	:	white;
			font-family	:	Helvetica;
			font-size	:	20px;
			color		:	white;
			text-shadow	:	3px 3px 3px rgba(0,0,0,0.4);
		}

body
	div.container
		div#instructions 
			span <D-r>Click on the client map to see the Location in the display map
		p Client
		iframe#client(height="100%" width="100%" src='/tgs/user/?renderer=svg&scale=245')
	div.container
		p Display
		iframe#display(height="100%" style="pointer-events:none;" width="100%" src='/tgs/display/?renderer=svg&scale=245')
